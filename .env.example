# Database (matches docker-compose)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/agent_payments"

# Redis (matches docker-compose)
REDIS_URL="redis://localhost:6379"

# API
PORT=3000
API_PREFIX=/v1

# Worker auth: set a secret key; worker must send X-Worker-Key with this value
WORKER_API_KEY=your-worker-secret-key-change-me

# Stripe (test mode)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
# For Stripe Issuing you need an Issuing platform; use test keys from Stripe Dashboard

# Worker: base URL for API (stub worker calls /card/reveal and /agent/result)
API_BASE_URL=http://localhost:3000/v1

# E2E / local testing: set to true to skip Stripe webhook signature verification
STRIPE_WEBHOOK_TEST_BYPASS=false
